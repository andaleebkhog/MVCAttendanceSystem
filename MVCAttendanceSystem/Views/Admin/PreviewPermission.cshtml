@model List<MVCAttendanceSystem.Models.Permission>

@{
    ViewBag.Title = "PreviewPermission";
}

<h2>Preview Permissions</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>User Name</th>
            <th>Note</th>
            <th>Status</th>
            <th>Permission Date</th>
            <th></th>
        </tr>
        @for (int i = 0; i < Model.Count(); i++)
        {
            @Html.HiddenFor(modelItem => Model[i].ApplicationUserId)
            @Html.HiddenFor(modelItem => Model[i].PermissionId)
            @Html.HiddenFor(modelItem => Model[i].Note)
            @Html.HiddenFor(modelItem => Model[i].PermissionDate)

            if (Model[i].Status == null || Model[i].Status == "Waiting")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].applicationUser.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].PermissionDate)
                    </td>
                    <td>
                        @Html.CheckBoxFor(modelItem => Model[i].IsChecked)
                    </td>
                </tr>
            }
        }

    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
}


